<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ImageBrush x:Key="zh" ImageSource="/images/Chinese.jpg" Stretch="Uniform"/>
    <ImageBrush x:Key="en" ImageSource="/images/English.jpg" Stretch="Uniform"/>
    <ImageBrush x:Key="tw" ImageSource="/images/Kokkien.jpg" Stretch="Uniform"/>
    <ImageBrush x:Key="hoka" ImageSource="/images/Hokka.png" Stretch="Uniform"/>
    <ImageBrush x:Key="hk" ImageSource="/images/Cantonese.jpg" Stretch="Uniform"/>

    <Style x:Key="l_zh" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource zh}"/>
    </Style>
    <Style x:Key="l_en" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource en}"/>
    </Style>
    <Style x:Key="l_tw" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource tw}"/>
    </Style>
    <Style x:Key="l_hoka" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource hoka}"/>
    </Style>
    <Style x:Key="l_hk" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource hk}"/>
    </Style>
    
    <!--<Style x:Key="Bdow" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{DynamicResource dow}"/>
        <Setter Property="Template"  Value="{StaticResource xxTemplate}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource dowh}"/>
            </Trigger>
        </Style.Triggers>
    </Style>-->
</ResourceDictionary>
